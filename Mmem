#include<stdio.h>

void main() {

int memblok, limit,i,j;

scanf("%d%d",&memblok,&limit);

struct memory {

int size,alloc;

}m[memblok];

struct process {

int psize, flag;

}p[limit];

m[i].alloc=0;

}

p[i].flag=0;

else{

printf("Enter the number of memory blocks and no of process\n"); printf("Enter the size of memory block\n"); for(i=0;i<memblok;i++){ scanf("%d",&m[i].size); printf("Enter the size of processes\n"); for(i=0;i<limit;i++){ scanf("%d",&p[i].psize); } for(i=0;i<limit;i++){ for(j=0;j<memblok;j++){ if(p[i].flag-0){ if(p[i].psize<=m[j].size) { if(m[j].alloc-1) continue; m[j].alloc=1; p[i].flag=1; printf("process %d is allocated in %d block\n",p[i].psize,m[j].size); } }

for(i=0;i<limit;i++){
if(p[i].flag-0)

printf("There is no space for %d process\n",p[i].psize);

}

}
